<%- include('../layouts/header.ejs')%>




<section class="vh-100" style="background-color: #eee; overflow: hidden;">
    <nav class="navbar p-3 navbar-light bg-light">
        <span class="navbar-brand mb-0 h1">User Home</span>
        <form action="/logout" method="post">
            <!-- <button type="submit">Logout</button> -->
            <button type="submit" class="btn btn-primary">Logout</button>
    
        </form>
      </nav>
    
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-md-12 col-xl-4">
  
          <div class="card" style="border-radius: 15px;">
            <div class="card-body text-center">
              <div class="mt-3 mb-4">
                <img src="userImages/<%= User.image %>"  alt="<%=User.image%>"
                  class="rounded-circle img-fluid" style="width: 200px; height: 200px;" />
              </div>
              <h4 class="mb-2"><%= User.name%></h4>
              <p class="text-muted mb-4">Email <span class="mx-2">|</span> <%= User.email %></p>

                  <p class="text-muted mb-4">Mobile <span class="mx-2">|</span> <%= User.mobile %></p>

                  
              
              <a href="/edit?id=<%=User._id%>"><button type="button" class="btn btn-primary btn-rounded btn-lg">
                Edit Profile
              </button></a>
     
            </div>
          </div>
  
        </div>
      </div>
    </div>
  </section>
  <%- include('../layouts/footer.ejs')%>
