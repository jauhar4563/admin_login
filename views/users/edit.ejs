<div class="container">
    <h1 class="h2 mt-3 text-center">Edit Profile</h1>
  	<hr>
	<div class="row">
      <div class="col-md-3">
       <a href="/home"><input type="submit" value="Back to home" class="btn btn-warning"> </a>              

      </div>
      
      <div class="col-md-9 personal-info">
        <div class="d-flex justify-content-center">
            <img src="userImages/<%= User.image %>" style="width: 200px; height: 200px; margin-left: -300px;"  alt="<%=User.image%>" class="rounded-circle img-fluid mb-3">
        </div>
        <h6 style="margin-left: 250px;">Upload a different photo...</h6>


        
                        <form action="" method="post" enctype="multipart/form-data">
                            <div class="col-lg-3 mt-3 text-center" style="margin-left: 250px;">
                
                <input type="file" name="image" >
              </div>


              <div class="form-group">
                <div class="col-lg-8">
                  <!-- Pass the user ID as a hidden input field -->
                  <input type="hidden" name="user_id" value="<%= User._id %>">
                </div>
              </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Name:</label>
            <div class="col-lg-8">
              <input type="text" name="name" value="<%=User.name%>" class="form-control" >
            </div>
          </div>
          
          <div class="form-group">
            <label class="col-lg-3 control-label">Email:</label>
            <div class="col-lg-8">
              <input type="email" name="email" value="<%=User.email%>" class="form-control" >
            </div>
          </div>
          
          <div class="form-group">
            <label class="col-md-3 control-label">Mobile:</label>
            <div class="col-md-8">
              <input type="text" name="mno" value="<%=User.mobile%>" class="form-control" >
            </div>
          
          <div class="form-group">
            <label class="col-md-3 control-label"></label>
            <div class="col-md-8 d-flex justify-content-center">
                <input type="submit" value="Update Profile" class="btn btn-primary">              
            </div>
          </div>
        </form>
      </div>
  </div>
</div>
